{% extends "admin::layouts.layout" %}

{% block addcss %}
{{ asset('plugins/icheck/skins/all.css')|css_tag }}
{{ asset('plugins/select2/css/select2.min.css')|css_tag }}
{{ asset('plugins/select2/css/select2-bootstrap.min.css')|css_tag }}

{{ asset('plugins/datatables/datatables.min.css')|css_tag }}
{{ asset('plugins/datatables/plugins/bootstrap/datatables.bootstrap.css')|css_tag }}
{% endblock %}

{% block pageheader %}
<!-- BEGIN PAGE HEAD-->
<div class="page-head">
    <div class="container">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>{{ string_menuname }}
                <small>Form {{ string_menuname }}</small>
            </h1>
        </div>
        <!-- END PAGE TITLE -->
    </div>
</div>
<!-- END PAGE HEAD-->

{% endblock %}


{% block breadcrumbs %}
<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="{{ url('/home') }}">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="javascript:void(0)">Admin</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ route('menu_show') }}">{{ string_menuname }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Form</span>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
{% endblock %}

{% block body %}

<div class="row">
  <div class="col-md-12">
      <!-- BEGIN VALIDATION STATES-->
      <div class="portlet light portlet-fit portlet-form bordered">
          <div class="portlet-title">
              <div class="caption">
                  <i class="glyphicon glyphicon-file font-green"></i>
                  <span class="caption-subject font-green bold uppercase">Form {{ string_menuname }}</span>
              </div>
          </div>
          <div class="portlet-body">
              <!-- BEGIN FORM-->
              <form action="{% if state == "add" %}{{ route('treatment_post') }}{% else %}{{ route('treatment_update') }}{% endif %}" name="form_{{ string_menuname }}" id="form_{{ string_menuname }}" class="form-horizontal" method="post">
                  {{ csrf_field() }}
                  <div class="form-body">
                      <!-- NAME  -->
                    <div class="form-group {% if (errors.has('name')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Name {{ string_menuname }}
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa fa-user"></i>
                              <input type="text" class="form-control" id="name" name="name" placeholder="Name" autocomplete="off" value="{% if state == 'add' %}{{ old('name') }}{% else %}{{ Treatment.name }}{% endif %}">
                              <input type="hidden" class="form-control" id="id" name="id" value="{{ id }}" />
                              {% if (errors.has('name')) %}<span class="help-block"> {{ errors.first('name') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>
                    <!-- END NAME  -->
                    <!-- ADDRESS -->
                    <div class="form-group {% if (errors.has('description')) %}has-error{% endif %}">
                            <label class="control-label col-md-3">Description
                                <span class="required"> * </span>
                            </label>
                        <div class="col-md-6">
                              <div class="input-icon right">
                                  <i class="fa fa-info"></i>
                                  <textarea class="form-control" id="description" name="description" placeholder="My Description Treatment">{% if state == 'add' %}{{ old('description') }}{% else %}{{ Treatment.description }}{% endif %}</textarea>
                                  {% if (errors.has('description')) %}<span class="help-block"> {{ errors.first('address') }} </span>{% endif %}
                              </div>
                       </div>
                    </div>
                    <!-- END ADDRESS -->


                  </div>
                  <div class="form-actions">
                      <div class="row">
                          <div class="col-md-offset-3 col-md-9">
                            <a  class="btn btn-default" href="{{ route('treatment_show') }}">Batal</a>
                            <button type="submit" class="btn btn-success">Simpan</button>
                          </div>
                      </div>
                  </div>
              </form>
              <!-- END FORM-->
          </div>
          <!-- END VALIDATION STATES-->
      </div>
  </div>
</div>


{% endblock %}


{% block addjs %}

<!-- VALIDATION -->
{{ asset('plugins/jquery-validation/js/jquery.validate.min.js')|script_tag }}
{{ asset('plugins/jquery-validation/js/additional-methods.min.js')|script_tag }}
{{ asset('modules/treatment/validate.js')|script_tag }}

<!-- INPUT-MASK BUNDLE-->
{{ asset('plugins/jquery-inputmask/jquery.inputmask.bundle.min.js')|script_tag }}
<!-- JS INPUT-MASK -->
{{ asset('js/input-mask/input-mask.js')|script_tag }}


{% endblock %}
