{% extends "admin::layouts.layout" %}

{% block addcss %}
{{ asset('plugins/icheck/skins/all.css')|css_tag }}
{{ asset('plugins/select2/css/select2.min.css')|css_tag }}
{{ asset('plugins/select2/css/select2-bootstrap.min.css')|css_tag }}
{% endblock %}

{% block pageheader %}
<!-- BEGIN PAGE HEAD-->
<div class="page-head">
    <div class="container">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>{{ string_menuname }}
                <small>Reset Password</small>
            </h1>
        </div>
        <!-- END PAGE TITLE -->
    </div>
</div>
<!-- END PAGE HEAD-->

{% endblock %}


{% block breadcrumbs %}
<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="{{ url('/home') }}">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="javascript:void(0)">Admin</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ route('menu_show') }}">{{ string_menuname }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Reset Password</span>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
{% endblock %}

{% block body %}

<div class="row">
  <div class="col-md-12">
      <!-- BEGIN VALIDATION STATES-->
      <div class="portlet light portlet-fit portlet-form bordered">
          <div class="portlet-title">
              <div class="caption">
                  <i class="glyphicon glyphicon-file font-green"></i>
                  <span class="caption-subject font-green bold uppercase">Form {{ string_menuname }}</span>
              </div>
          </div>
          <div class="portlet-body">
              <!-- BEGIN FORM-->
              <form action="{{ route('user_changed_password_act') }}" name="form_{{ string_menuname }}" id="form_{{ string_menuname }}" class="form-horizontal" method="post">
                  {{ csrf_field() }}
                  <div class="form-body">
                      <!-- BRANCH  -->
                    <div class="form-group {% if (errors.has('branch')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Branch
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa fa-lock"></i>
                              <input type="text" readonly="true" class="form-control" id="branch" name="branch" placeholder="name" autocomplete="off" value="{{ Users.branch.name }}">
                              {% if (errors.has('branch')) %}<span class="help-block"> {{ errors.first('branch') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>
                    <!-- END NAME  -->

                      <!-- NAME  -->
                    <div class="form-group {% if (errors.has('name')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Name
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa fa-lock"></i>
                              <input type="text" readonly="true" class="form-control" id="name" name="name" placeholder="name" autocomplete="off" value="{{ Users.name }}">
                              {% if (errors.has('name')) %}<span class="help-block"> {{ errors.first('name') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>
                    <!-- END NAME  -->

                  <!-- EMAIL  -->
                    <div class="form-group {% if (errors.has('email')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Email
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa fa-lock"></i>
                              <input type="text" readonly="true" class="form-control" id="email" name="email" placeholder="email" autocomplete="off" value="{{ Users.email }}">
                              {% if (errors.has('email')) %}<span class="help-block"> {{ errors.first('email') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>
                    <!-- END EMAIL  -->
                    <hr>
                    <h3> Reset Password </h3>
                      <!-- PASSWORD  -->
                    <div class="form-group {% if (errors.has('password')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Password
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa fa-lock"></i>
                              <input type="password" class="form-control" id="password" name="password" placeholder="Password" autocomplete="off">
                              {% if (errors.has('password')) %}<span class="help-block"> {{ errors.first('password') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>
                    <!-- END PASSWORD  -->


                    <!-- PASSWORD CONFIRMATION -->
                  <div class="form-group {% if (errors.has('password_confirmation')) %}has-error{% endif %}">
                      <label class="control-label col-md-3">Re-type Password
                          <span class="required"> * </span>
                      </label>
                      <div class="col-md-6">
                        <div class="input-icon right">
                            <i class="fa fa-lock"></i>
                            <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" placeholder="password_confirmation" autocomplete="off">
                            {% if (errors.has('password_confirmation')) %}<span class="help-block"> {{ errors.first('password_confirmation') }} </span>{% endif %}
                        </div>
                         </div>
                  </div>
                  <!-- END PASSWORD CONFIRMATION -->

                  </div>
                  <div class="form-actions">
                      <div class="row">
                          <div class="col-md-offset-3 col-md-9">
                              <input type="hidden" class="form-control" id="id" name="id" value="{{ id }}" />
                            <a  class="btn btn-default" href="{{ route('user_show') }}">Batal</a>
                            <button type="submit" class="btn btn-danger">Reset Password</button>
                          </div>
                      </div>
                  </div>
              </form>
              <!-- END FORM-->
          </div>
          <!-- END VALIDATION STATES-->
      </div>
  </div>
</div>


{% endblock %}


{% block addjs %}

<!-- VALIDATION -->
{{ asset('plugins/jquery-validation/js/jquery.validate.min.js')|script_tag }}
{{ asset('plugins/jquery-validation/js/additional-methods.min.js')|script_tag }}
{{ asset('modules/branch/validate.js')|script_tag }}

<!-- DROPDOWN -->
{{ asset('plugins/select2/js/select2.full.min.js')|script_tag }}

<!-- INPUT-MASK BUNDLE-->
{{ asset('plugins/jquery-inputmask/jquery.inputmask.bundle.min.js')|script_tag }}
<!-- JS INPUT-MASK -->
{{ asset('js/input-mask/input-mask.js')|script_tag }}


{% endblock %}
