        <!-- END LOGO -->
        <!-- BEGIN LOGIN -->
        <div class="content">
            <!-- BEGIN REGISTRATION FORM -->
            <form action="{{ route('post_choose_register') }}" method="POST">
                {{ csrf_field() }}
                <div class="form-title">
                    <span class="form-title">Registration</span>
                </div>
                {% if errors.any %}
                        {% for error in errors.all %}
                        <div class="alert alert-danger">
                            <button class="close" data-close="alert"></button>
                            <span>
                                {{ error }}
                            </span>
                        </div>
                        {% endfor %}
                {% endif %}
                <div class="form-group">
                    <div class="input-group">
                        <div class="icheck-list">
                            <label style="color:white;">
                                    <div class="iradio_square-grey">
                                        <input name="status" class="icheck" data-radio="iradio_square-grey" type="radio" value="Sales">
                                    </div> Sales
                            </label>
                            <label style="color:white;">
                                    <div class="iradio_square-grey">
                                        <input name="status" class="icheck" data-radio="iradio_square-grey" type="radio" value="Dealer">
                                    </div> Dealer
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <a href="{{ url('/') }}" id="register-back-btn" class="btn btn-default">Back</a>&nbsp;
                    <button type="submit" id="register-submit-btn" class="btn grey uppercase ">Next</button>
                </div>
            </form>
            <!-- END REGISTRATION FORM -->

        </div>
